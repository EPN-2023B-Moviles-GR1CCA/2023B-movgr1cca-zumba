<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#44A8D5"
    tools:context=".BEstudiante">

    <EditText
        android:id="@+id/editTextText_NombreEs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/textView_Estudiante"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/textView_Estudiante"
        app:layout_constraintTop_toBottomOf="@+id/textView_Estudiante" />

    <EditText
        android:id="@+id/editTextText_FechaNacimiento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Fecha Nacimiento"
        android:inputType="text"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/editTextText_NombreEs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextText_NombreEs"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_NombreEs" />

    <EditText
        android:id="@+id/editTextText_Activo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Activo"
        android:inputType="text"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/editTexPromedio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTexPromedio"
        app:layout_constraintTop_toBottomOf="@+id/editTexPromedio" />

    <TextView
        android:id="@+id/textView_Estudiante"
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:text="Estudiante"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ListView
        android:id="@+id/lvView_Estudiante"
        android:layout_width="358dp"
        android:layout_height="291dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCrearEstudiante"
        app:layout_constraintVertical_bias="0.185" />

    <Button
        android:id="@+id/btnCrearEstudiante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextText_Activo"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="@+id/editTextText_Activo"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_Activo"
        app:layout_constraintVertical_bias="0.07" />

    <EditText
        android:id="@+id/editTexPromedio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Promedio"
        android:inputType="numberDecimal"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/editTextText_FechaNacimiento"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextText_FechaNacimiento"
        app:layout_constraintTop_toBottomOf="@+id/editTextText_FechaNacimiento" />
</androidx.constraintlayout.widget.ConstraintLayout>