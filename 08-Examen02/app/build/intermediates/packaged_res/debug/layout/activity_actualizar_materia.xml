<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CAC0A4"
    tools:context=".ActualizarMateria">

    <EditText
        android:id="@+id/dt_codigoUPdMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="codigo Materia"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/et_nombreUPDMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="nombre"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/dt_codigoUPdMateria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dt_codigoUPdMateria"
        app:layout_constraintTop_toBottomOf="@+id/dt_codigoUPdMateria" />

    <EditText
        android:id="@+id/et_creditosUDPMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="text"
        android:text="creditos"
        app:layout_constraintEnd_toEndOf="@+id/et_nombreUPDMateria"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/et_nombreUPDMateria"
        app:layout_constraintTop_toBottomOf="@+id/et_nombreUPDMateria" />

    <EditText
        android:id="@+id/et_tcostoUPDMATERIA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="costo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_creditosUDPMateria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_creditosUDPMateria"
        app:layout_constraintTop_toBottomOf="@+id/et_creditosUDPMateria" />

    <EditText
        android:id="@+id/et_EsobligatorioUPDMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Es obligatorio"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_tcostoUPDMATERIA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_tcostoUPDMATERIA"
        app:layout_constraintTop_toBottomOf="@+id/et_tcostoUPDMATERIA" />

    <EditText
        android:id="@+id/et_CodigoEstudianteUPD_Materia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Codigo Estudiante"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/et_EsobligatorioUPDMateria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_EsobligatorioUPDMateria"
        app:layout_constraintTop_toBottomOf="@+id/et_EsobligatorioUPDMateria" />

    <Button
        android:id="@+id/btn_actualizarMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:text="Actualizar Materia"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_CodigoEstudianteUPD_Materia"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="@+id/et_CodigoEstudianteUPD_Materia" />
</androidx.constraintlayout.widget.ConstraintLayout>