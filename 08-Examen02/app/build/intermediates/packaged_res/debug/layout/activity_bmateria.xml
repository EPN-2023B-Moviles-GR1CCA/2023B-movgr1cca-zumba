<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BMateria">

    <EditText
        android:id="@+id/ed_nombreMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/ed_creditos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="creditos"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/ed_nombreMateria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_nombreMateria"
        app:layout_constraintTop_toBottomOf="@+id/ed_nombreMateria" />

    <EditText
        android:id="@+id/edt_costo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="costo"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/ed_creditos"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ed_creditos"
        app:layout_constraintTop_toBottomOf="@+id/ed_creditos" />

    <EditText
        android:id="@+id/edt_esObligatorio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="esObligatorio"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/edt_costo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_costo"
        app:layout_constraintTop_toBottomOf="@+id/edt_costo" />

    <EditText
        android:id="@+id/ed_codigoEstudinateMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Codigo Estudiante"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/edt_esObligatorio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_esObligatorio"
        app:layout_constraintTop_toBottomOf="@+id/edt_esObligatorio" />

    <Button
        android:id="@+id/btn_InsertarMateria"
        android:layout_width="158dp"
        android:layout_height="70dp"
        android:text="Insertar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/ed_codigoEstudinateMateria"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/ed_codigoEstudinateMateria"
        app:layout_constraintTop_toBottomOf="@+id/ed_codigoEstudinateMateria"
        app:layout_constraintVertical_bias="0.352" />

</androidx.constraintlayout.widget.ConstraintLayout>