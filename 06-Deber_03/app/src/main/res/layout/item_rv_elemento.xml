<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E8E3E3">

        <androidx.cardview.widget.CardView
            android:layout_width="399dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="398dp"
                android:layout_height="60dp"
                android:background="#FBFBFB"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvnombreDirectorio"
                    android:layout_width="206dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="7dp"
                    android:text="Nombre del archivo"
                    android:textColor="#AE000000"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.085"
                    app:layout_constraintStart_toEndOf="@+id/imDirectorio"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvalmacenamientoDirectorio"
                    android:layout_width="113dp"
                    android:layout_height="17dp"
                    android:layout_margin="5dp"
                    android:layout_marginStart="64dp"
                    android:layout_marginTop="7dp"
                    android:text="Almacenamiento"
                    android:textColor="#7A000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.04"
                    app:layout_constraintStart_toEndOf="@+id/imDirectorio"
                    app:layout_constraintTop_toBottomOf="@+id/tvnombreDirectorio"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/tvfechaDirectorio"
                    android:layout_width="84dp"
                    android:layout_height="17dp"
                    android:layout_gravity="left"
                    android:layout_margin="5dp"
                    android:text="Fecha"
                    android:textColor="#7A000000"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.024"
                    app:layout_constraintStart_toEndOf="@+id/tvalmacenamientoDirectorio"
                    app:layout_constraintTop_toBottomOf="@+id/tvnombreDirectorio" />

                <ImageView
                    android:id="@+id/imDirectorio"
                    android:layout_width="48dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_baseline_folder_24" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="38dp"
                    android:layout_height="41dp"
                    android:layout_marginStart="64dp"
                    android:text="\u22EE"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/tvnombreDirectorio"
                    tools:layout_editor_absoluteY="16dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>